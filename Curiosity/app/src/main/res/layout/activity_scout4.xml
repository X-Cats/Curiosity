<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/teamNumScout4"
        android:layout_alignBottom="@+id/teamNumScout4"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@+id/teamNumScout4"
        android:text="Climb | Team:"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/teamNumScout4"
        android:layout_width="53dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/button21"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="16dp"
        android:text="#"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/climbRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView26"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:checkedButton="@id/climbRadioButton1">

        <RadioButton
            android:id="@+id/climbRadioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did Not Attempt to Climb or Assist"/>

        <RadioButton
            android:id="@+id/climbRadioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failed to Climb"/>

        <RadioButton
            android:id="@+id/climbRadioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climbed Solo Successfully"/>

        <RadioButton
            android:id="@+id/climbRadioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climbed via Levitate"/>

        <RadioButton
            android:id="@+id/climbRadioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climbed via Teammate"/>

        <RadioButton
            android:id="@+id/climbRadioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failed to Assist Teammate"/>

        <RadioButton
            android:id="@+id/climbRadioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assisted 1 Teammate to Climb"/>

        <RadioButton
            android:id="@+id/climbRadioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assisted 2 Teammates to Climb"/>

    </RadioGroup>

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:onClick="scoutMatch4Click"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</RelativeLayout>