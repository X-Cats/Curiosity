<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Conclusion | Team:"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView30"
        android:text="#"
        android:textSize="24sp"/>

    <ToggleButton
        android:id="@+id/malfunctionToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/malfunctionTextView"
        android:layout_toEndOf="@+id/textView30"
        android:textOff="No :)"
        android:textOn="Yes :("/>

    <TextView
        android:id="@+id/malfunctionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView30"
        android:text="Malfunction?"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="20dp"
        android:onClick="scoutMatch5Click"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</RelativeLayout>